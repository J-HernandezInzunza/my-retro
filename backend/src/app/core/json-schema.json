{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Team": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RetroSession"
          }
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        },
        "displayName": {
          "type": [
            "string",
            "null"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "team": {
          "anyOf": [
            {
              "$ref": "#/definitions/Team"
            },
            {
              "type": "null"
            }
          ]
        },
        "retroItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RetroItem"
          }
        },
        "votes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Vote"
          }
        },
        "actionItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActionItem"
          }
        }
      }
    },
    "RetroSession": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "default": "ACTIVE",
          "enum": [
            "ACTIVE",
            "COMPLETED",
            "ARCHIVED"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "team": {
          "$ref": "#/definitions/Team"
        },
        "format": {
          "$ref": "#/definitions/RetroFormat"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RetroItem"
          }
        },
        "actionItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActionItem"
          }
        }
      }
    },
    "RetroItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "positionData": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "metadata": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "author": {
          "$ref": "#/definitions/User"
        },
        "session": {
          "$ref": "#/definitions/RetroSession"
        },
        "votes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Vote"
          }
        }
      }
    },
    "Vote": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "item": {
          "$ref": "#/definitions/RetroItem"
        }
      }
    },
    "ActionItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "isCompleted": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "session": {
          "$ref": "#/definitions/RetroSession"
        },
        "assignedTo": {
          "anyOf": [
            {
              "$ref": "#/definitions/User"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "RetroFormat": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "layoutConfig": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "interactionConfig": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "validationRules": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RetroSession"
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "team": {
      "$ref": "#/definitions/Team"
    },
    "user": {
      "$ref": "#/definitions/User"
    },
    "retroSession": {
      "$ref": "#/definitions/RetroSession"
    },
    "retroItem": {
      "$ref": "#/definitions/RetroItem"
    },
    "vote": {
      "$ref": "#/definitions/Vote"
    },
    "actionItem": {
      "$ref": "#/definitions/ActionItem"
    },
    "retroFormat": {
      "$ref": "#/definitions/RetroFormat"
    }
  }
}